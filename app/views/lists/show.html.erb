<h2><%= @list.name %></h2>

<%=link_to 'Back to overview', root_path, class:"btn btn-primary"%>
<%=link_to 'Create a new bookmark', new_list_bookmark_path(@list), class:"btn btn-primary"%>

<ul style="list-style: none;">
<% @list.bookmarks.each do |bookmark|%>
<div class="card" style="width: 18rem;">
  <img class="card-img-top" src=<%=bookmark.movie.poster_url%> alt="movie poster" width="200">
  <div class="card-body">
    <h5 class="card-title">Review:</h5>
    <p class="card-text"><%=bookmark.comment%></p>
  </div>
</div>
<% end %>
</ul>
